<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              tools:context="com.little.stockgeek.ActivityStockChart">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/Indigo_colorPrimary"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddMyStock"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/timerange_btn_selector"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="加入自选"/>

        <LinearLayout
            android:background="@color/Indigo_colorPrimaryDark"
            android:layout_width="1dip"
            android:layout_height="fill_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btnMoniBuy"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/timerange_btn_selector"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="模拟买入"/>

        <LinearLayout
            android:background="@color/Indigo_colorPrimaryDark"
            android:layout_width="1dip"
            android:layout_height="fill_parent">

        </LinearLayout>

        <Button
            android:id="@+id/btnMoniSell"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/timerange_btn_selector"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="模拟卖出"/>

    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"></WebView>


    <include layout="@layout/layout_time_range"
        />

</LinearLayout>
